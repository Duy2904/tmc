apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: masterv2-api-dev
  name: masterv2-api-dev
  namespace: sit
spec:
  replicas: 1
  selector:
    matchLabels:
      app: masterv2-api-dev
  template:
    metadata:
      labels:
        app: masterv2-api-dev
    spec:
      containers:
      - envFrom:
        - configMapRef:
            name: masterv2-api-configmap-dev
        image: tripotadevacr.azurecr.io/master-api:
        imagePullPolicy: Always
        name: masterv2-api-dev
        ports:
        - containerPort: 8080
        resources:
          limits:
            memory: 1024Mi
          requests:
            memory: 1024Mi
        volumeMounts:
            - name: appdata
              mountPath: /app/App_Data/Tenants
      volumes:
        - name: appdata
          hostPath:
            path: /home/devops/docker  # Thư mục trên host chứa dữ liệu Tenants
            type: DirectoryOrCreate
      imagePullSecrets:
      - name: tripota-acr-secret
      
